@using DotNetCoreFirebaseRealtimeDatabase.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    <a asp-action="Create" class="btn btn-primary">Yeni İş Ekle</a>
</div>
<div class="form-group">
    <table class="table table-bordered table-striped">
        <tr>
            <th>İş Adı</th>
            <th>Termin Süresi</th>
            <th>A Birimi</th>
            <th>B Brimi</th>
            <th class="text-center">Detayları</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.name</td>
                <td>@x.deadline</td>
                <td>
                    @{
                        if (@x.AFinishTime != null)
                        {
                            <a href="" class="btn btn-success">TAMAMLANDI</a>
                        }
                        else if (@x.AStartTime != null)
                        {
                            <a href="" class="btn btn-warning">İŞE BAŞLANDI</a>

                        }
                        else if (@x.AStartTime == null)
                        {
                            <a href="" class="btn btn-danger">BEKLİYOR</a>
                        }

                    }
                </td>
                <td>
                    @{
                        if (@x.BFinishTime != null)
                        {
                            <a href="" class="btn btn-success">TAMAMLANDI</a>
                        }
                        else if (@x.BStartTime != null)
                        {
                            <a href="" class="btn btn-warning">İŞE BAŞLANDI</a>

                        }
                        else if (@x.BStartTime == null)
                        {
                            <a href="" class="btn btn-danger">BEKLİYOR</a>
                        }

                    }
                </td>
                <td class="text-center"><a href="/Employee/Detail/@x.id" class="btn btn-secondary">Detaylar</a></td>
            </tr>
        }
    </table>
</div>
